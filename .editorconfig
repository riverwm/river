root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.zig]
indent_style = space
indent_size = 4

[*.{xml,yml}]
indent_style = space
indent_size = 2

[*.scd]
indent_style = tab
indent_size = 4

[completions/bash/*]
indent_style = tab
indent_size = 4
